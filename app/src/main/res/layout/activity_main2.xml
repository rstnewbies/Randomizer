<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qm.mboiler.randomizer.Main2Activity">

    <Button
        android:id="@+id/Menu_exit"
        android:onClick="Exit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="exit"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Menu_options"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.595" />

    <Button
        android:id="@+id/Menu_options"
        android:onClick="GoOptions"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="options"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Menu_exit"
        app:layout_constraintTop_toBottomOf="@+id/Menu_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.595" />

    <Button
        android:id="@+id/Menu_start"
        android:onClick="GoDraw"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="start draw!"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintBottom_toTopOf="@+id/Menu_options"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="spread" />
</android.support.constraint.ConstraintLayout>
